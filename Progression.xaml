        <Button x:Name="btnUcas" Content="UCAS" HorizontalAlignment="Left" Margin="307,320,0,0" VerticalAlignment="Top" Width="75" Height="41" Click="btnUcas_Click"/>
        <Button x:Name="btnExit" Content="Main Menu" HorizontalAlignment="Left" Margin="75,320,0,0" VerticalAlignment="Top" Width="75" Height="41" Click="btnExit_Click"/>

    </Grid>
</Window>
